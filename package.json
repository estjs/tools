{
  "name": "@estjs/tools",
  "version": "0.2.0-beta.6",
  "packageManager": "pnpm@10.11.0",
  "type": "module",
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estjs/tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:estjs/tools.git"
  },
  "author": "jiangxd <jiangxd2016@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.esm.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.cjs.js",
        "import": "./dist/index.esm.js"
      },
      "development": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.dev.cjs.js",
        "import": "./dist/index.dev.esm.js"
      },
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint ./src --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "play": "pnpm run --filter playground dev",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp --commit --tag --push && pnpm publish --access public"
  },
  "devDependencies": {
    "@estjs/eslint-config": "^2.0.4",
    "@vitest/coverage-v8": "3.2.3",
    "bumpp": "^10.1.1",
    "c8": "^10.1.3",
    "dayjs": "^1.11.13",
    "eslint": "^9.27.0",
    "jsdom": "^26.1.0",
    "pnpm": "^10.11.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
