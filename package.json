{
  "name": "@estjs/tools",
  "version": "0.1.24",
  "packageManager": "pnpm@8.15.5",
  "type": "module",
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estjs/tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:estjs/tools.git"
  },
  "author": "jiangxd <jiangxd2016@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint ./src --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "play": "pnpm run --filter playground dev",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp --commit --tag --push && pnpm publish --access public"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3"
  },
  "devDependencies": {
    "@estjs/eslint-config": "^1.1.1",
    "bumpp": "^9.4.0",
    "c8": "^9.1.0",
    "dayjs": "^1.11.10",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "pnpm": "^8.15.5",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}
