{
  "name": "@estjs/tools",
  "version": "0.1.29",
  "packageManager": "pnpm@9.5.0",
  "type": "module",
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estjs/tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:estjs/tools.git"
  },
  "author": "jiangxd <jiangxd2016@gmail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.esm.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.cjs.js",
        "import": "./dist/index.esm.js"
      },
      "development": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.dev.cjs.js",
        "import": "./dist/index.dev.esm.js"
      },
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint ./src --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "play": "pnpm run --filter playground dev",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp --commit --tag --push && pnpm publish --access public"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3"
  },
  "devDependencies": {
    "@estjs/eslint-config": "^1.2.2",
    "bumpp": "^9.4.1",
    "c8": "^10.1.2",
    "dayjs": "^1.11.11",
    "eslint": "^9.6.0",
    "jsdom": "^24.1.0",
    "pnpm": "^9.5.0",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.1"
  }
}
